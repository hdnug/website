<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HDNUG</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
    @Styles.Render("~/Content/foundation/css")
    @Styles.Render("~/Content/kendo/css")
    @Styles.Render("~/Content/site/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #right-side-header {
            display: table-cell;
            vertical-align: bottom;
        }

        .horizontal li {
            display: inline;
            list-style-type: none;
        }

        a.menu-link {
            color: #ffffff;
            /*font-weight: bold;*/
            display: inline-block;
            position: relative;
            padding-bottom: 3px
        }

        a.menu-link:after {
            content: '';
            display: block;
            margin: auto;
            height: 3px;
            width: 0px;
            background: transparent;
            transition: width .2s ease, background-color .2s ease;
        }

        a.menu-link:hover:after {
            width: 100%;
            background: #ffffff;
        }
    </style>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @RenderSection("styles", required: false)
</head>
<body>
    <div style="border-bottom: 1px solid #c0c0c0; margin-bottom: .875em; background-color: #193366">
        <div class="row" style="padding: 20px">
            <div class="large-1 columns">
                <img src="@Url.Content("~/Content/Images/Site/30 - hdnugLogo.png")" height="95" width="95" />
            </div>
            <div class="large-6 columns">
                <h3 style="color: #ffffff; padding-top: 6px">Houston Dot Net User Group</h3>
            </div>
            <div class="large-5 columns">
                <div style="padding: 12px 6px 6px 6px">
                    <ul class="menu align-right">
                        <li>@Html.ActionLink("About", "About", "Home", new { @class = "menu-link" })</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "menu-link" })</li>
                        <li>@Html.ActionLink("Past", "Index", "Home", new { @class = "menu-link" })</li>
                        <li>@Html.ActionLink("Upcoming", "Index", "Home", new { @class = "menu-link" })</li>
                        <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "menu-link" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Header and Nav -->
    <!-- Main Page Content and Sidebar -->

    <div class="row">
        <div class="large-12 columns">
            @RenderBody()
        </div>
    </div>

    <!-- End Main Content and Sidebar -->
    <!-- Footer -->

    <footer style="background-color: #f2f2f2">
        <div class="row">
            <div class="large-12 columns">
                <div class="row">
                    <div class="large-6 columns">
                        <p>&copy; @DateTime.Now.Year - HDNUG.ORG</p>
                    </div>
                    <div class="large-6 columns">
                        <ul class="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/foundation")
    <script>
        $(document).foundation();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
