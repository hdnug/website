@model Hdnug.Web.Areas.Admin.Models.ViewModels.SpeakerViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WebSiteUrl)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WebSiteUrl)
        </dd>
        
        @if (Model.PhotoUrl != null || Model.PhotoUrl != string.Empty)
        {
            <dt>
                Photo
            </dt>
            <dd>
                <img src="@Url.Content(Model.PhotoUrl)" style="min-width: 150px; max-width: 200px; margin-bottom: 12px" />
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Bio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bio)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
