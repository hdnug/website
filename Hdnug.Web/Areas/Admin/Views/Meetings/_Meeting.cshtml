@model Hdnug.Web.Areas.Admin.Models.ViewModels.MeetingViewModel
<style type="text/css">.float-left {
     float: left;
     display: inline
 }</style>

<section>
    @Html.HiddenFor(x => x.Id)

    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title, new { required = "required" })
    
    <div>
        <div>
            @Html.LabelFor(x => x.MeetingStartDateTime, "Meeting Start Date and Time")
            @Html.TextBoxFor(x => x.MeetingStartDateTime)
        </div>
        <div>
            @Html.LabelFor(x => x.MeetingEndDateTime, "Meeting End Date and Time")
            @Html.TextBoxFor(x => x.MeetingEndDateTime)
        </div>
    </div>
    <div>
        <div>
            @Html.Label("sponsors", "Sponsors")
            @Html.DropDownListFor(x => x.Sponsors, new MultiSelectList(Model.Sponsors, "Id", "Name", Model.SelectedSponsors))
        </div>
        <div>
            @Html.Label("presentations", "Presentations")
            @Html.DropDownListFor(x=>x.Presentations, new MultiSelectList(Model.Presentations, "Id", "Title", Model.SelectedPresentations))
        </div>
    </div>
    <div class="clearfix"></div>
    
    @Html.LabelFor(x => x.Location)
    @Html.TextBoxFor(x => x.Location)
    
    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(x => x.Description)

</section>
<script>
        $(document).ready(function () {
            $("#MeetingStartDateTime").kendoDateTimePicker({
                value: new Date()
            });
            $("#MeetingEndDateTime").kendoDateTimePicker({
                value: new Date()
            });

            $("#Sponsors").kendoMultiSelect({
                autoClose: false,
                
                placeholder: "Select a sponsor"
            });

            $("#Presentations").kendoMultiSelect({
                autoClose: false
            }).data("kendoMultiSelect");

            $("#get").click(function () {
                alert("Attendees:\n\nRequired: " + required.value() + "\nOptional: " + optional.value());
            });
            $("#CreateButton").kendoButton();
            $("#SaveButton").kendoButton();
        });
</script>