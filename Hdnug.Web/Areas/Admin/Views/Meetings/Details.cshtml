        <tr>
            <th>
                Name
            </th>
            <th>
                Contact
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                TagLine
            </th>
            <th>
                SponsorMessage
            </th>
            <th>
                WebSiteUrl
            </th>
            <th>
                LogoUrl
            </th>
        </tr>

        @foreach (var item in Model.Sponsors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TagLine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SponsorMessage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WebSiteUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Logo.ImageUrl)
                </td>
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
