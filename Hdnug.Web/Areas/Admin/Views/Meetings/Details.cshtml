            </th>
            <th>
                Start
            </th>
            <th>
                End
            </th>
            <th>
                Location
            </th>
            <th>
                Speakers
            </th>
        </tr>

        @foreach (var item in Model.Presentations)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.PresentationStartDateTime.ToString("t")
                </td>
                <td>
                    @item.PresentationEndDateTime.ToString("t")
                </td>
                <td>
                    @item.Location
                </td>
                <td>
                    @string.Join(", ", item.Speakers.Select(x => x.Name))
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>*@
