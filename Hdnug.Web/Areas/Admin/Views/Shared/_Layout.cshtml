@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HDNUG</title>
    @Styles.Render("~/Content/foundation/css")
    @Styles.Render("~/Content/kendo/css")
    @Styles.Render("~/Content/site/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="top-bar">
        <div class="top-bar-left">
            <ul class="dropdown menu" data-dropdown-menu>
                <li class="menu-text">HDNUG</li>
                @if (Request.IsAuthenticated && User.IsInRole(Hdnug.Domain.Constants.Roles.ApplicationAdministrator))
                {
                    <li><a href=@Url.Action("Index", "Home")>Admin</a></li>
                    <li><a href=@Url.Action("Index", "Meetings")>Meetings</a></li>
                    <li><a href=@Url.Action("Index", "Speakers")>Speakers</a></li>
                    <li><a href=@Url.Action("Index", "Sponsors")>Sponsors</a></li>
                    <li><a href=@Url.Action("Index", "Presentations")>Presentations</a></li>
                    <li><a href=@Url.Action("Index", "PrizeSponsorships")>Prize Sponsorships</a></li>
                    <li><a href=@Url.Action("Index", "Slider")>Sliders</a></li>
                }
            </ul>
        </div>
        @if (Request.IsAuthenticated)
        {
        <div class="top-bar-right">
            <ul  class="dropdown menu" data-dropdown-menu>
                <li><span>Logged in as: @Html.ActionLink(User.Identity.GetUserName(), "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })</span></li>
            </ul>
        </div>
        }
    </div>
    <div class="row" style="margin-top: 2rem">
        <div class="large-12 columns">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/foundation")
    <script>
        $(document).foundation();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
